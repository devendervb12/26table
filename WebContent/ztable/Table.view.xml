<core:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m"
		controllerName="ztable.Table" xmlns:html="http://www.w3.org/1999/xhtml">
	<Page title="Title">
		<content>
	        <Table id="idTable" items="{/d/results}">
	          <columns>
	             <Column>
	                <header>
	                    <Text text="Product ID"/>
	                </header>
	             </Column>
	             
	             <Column>
	                    <Text text="Name"/>
	             </Column>
	             
	             <Column>       
	                    <Text text="Type Code"/>  
	             </Column>
	             <Column>
	                    <Text text="Category"/>
	             </Column>
	          </columns>
	          <items>
	             <ColumnListItem>
	                 <cells>
	                     <Text text="{ProductID}"/>
	                     <Text text="{Name}"/>
	                     <Text text="{TypeCode}"/>
	                     <Text text="{Category}"/>
	                 </cells>
	             </ColumnListItem>
	               </items>
	        </Table>
		</content>
	</Page>
</core:View>